    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.9.2/dist/confetti.browser.min.js"></script>
    <script>
        // Countdown Timer
        const countdown = () => {
            const weddingDate = new Date("December 19, 2026 00:00:00").getTime();
            const now = new Date().getTime();
            const distance = weddingDate - now;

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            document.getElementById("countdown").innerHTML = `${days}d ${hours}h ${minutes}m ${seconds}s`;

            if (distance < 0) {
                clearInterval(x);
                document.getElementById("countdown").innerHTML = "We're Married!";
            }
        }
        let x = setInterval(countdown, 1000);
        countdown();

        // --- Scroll Animations ---
        const mendhiSection = document.getElementById('mendhi');
        const hurdheeSection = document.getElementById('hurdhee');

        const isInViewport = (element) => {
            const rect = element.getBoundingClientRect();
            return (
                rect.top >= 0 &&
                rect.left >= 0 &&
                rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
                rect.right <= (window.innerWidth || document.documentElement.clientWidth)
            );
        };

        const createFireworks = () => {
            const fireworksContainer = mendhiSection.querySelector('.fireworks-container');
            if (!fireworksContainer || !isInViewport(mendhiSection)) return;

            for (let i = 0; i < 5; i++) {
                const firework = document.createElement('div');
                firework.classList.add('firework');
                firework.style.left = `${Math.random() * 100}%`;
                firework.style.bottom = `${Math.random() * 100}%`;
                fireworksContainer.appendChild(firework);

                setTimeout(() => firework.remove(), 2000);
            }
        };

        let fireworksInterval;

        const createFlowers = () => {
            const floralContainer = hurdheeSection.querySelector('.floral-decoration');
            if (!floralContainer || !isInViewport(hurdheeSection)) return;

            const flower = document.createElement('div');
            flower.classList.add('flower');
            flower.style.left = `${Math.random() * 100}vw`;
            flower.style.animationDuration = `${Math.random() * 3 + 2}s`;
            floralContainer.appendChild(flower);

            setTimeout(() => flower.remove(), 5000);
        };

        let flowerInterval;

        window.addEventListener('scroll', () => {
            if (isInViewport(mendhiSection)) {
                mendhiSection.classList.add('active');
                if (!fireworksInterval) {
                    fireworksInterval = setInterval(createFireworks, 500);
                }
            } else {
                mendhiSection.classList.remove('active');
                clearInterval(fireworksInterval);
                fireworksInterval = null;
            }

            if (isInViewport(hurdheeSection)) {
                hurdheeSection.classList.add('active');
                if (!flowerInterval) {
                    flowerInterval = setInterval(createFlowers, 200);
                }
            } else {
                hurdheeSection.classList.remove('active');
                clearInterval(flowerInterval);
                flowerInterval = null;
            }
        });


        // RSVP Form Confetti
        document.getElementById('rsvp-form').addEventListener('submit', function(event) {
            event.preventDefault();

            const form = this;
            const name = form.querySelector('#name').value;
            const attending = form.querySelector('#attending').value;

            if (attending === 'yes') {
                const myConfetti = confetti.create(null, {
                    resize: true,
                    useWorker: true
                });

                myConfetti({
                    particleCount: 150,
                    spread: 100,
                    origin: { y: 0.6 }
                });
                
                alert(`Thank you, ${name}! We can't wait to see you!`);
            } else {
                alert(`Thank you, ${name}. We'll miss you!`);
            }

            form.reset();
        });
    </script>
</body>
